<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Redirecting to Chrome</title>
  <!-- Meta Refresh Redirect - works even when JavaScript is disabled -->
  <meta http-equiv="refresh" content="3;url=https://www.google.com/chrome/" />
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #6c5ce7 0%, #00cec9 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
      color: #2d3436;
    }
    
    .redirect-container {
      background: #ffffff;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
      text-align: center;
      max-width: 500px;
    }
    
    .logo {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }
    
    h1 {
      font-size: 1.8rem;
      color: #2d3436;
      margin-bottom: 20px;
    }
    
    p {
      color: #636e72;
      margin-bottom: 30px;
      line-height: 1.6;
    }
    
    .redirect-icon {
      font-size: 3rem;
      margin-bottom: 20px;
    }
    
    .countdown {
      font-size: 1.2rem;
      color: #6c5ce7;
      margin-bottom: 20px;
      font-weight: 600;
    }
    
    .manual-link {
      display: inline-block;
      margin-top: 20px;
      padding: 12px 24px;
      background: #6c5ce7;
      color: white;
      text-decoration: none;
      border-radius: 50px;
      transition: all 0.3s;
    }
    
    .manual-link:hover {
      background: #5b4cdb;
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(108, 92, 231, 0.4);
    }
  </style>
</head>
<body>
  <div class="redirect-container">
    <div class="logo">‚ö° FlashURL</div>
    <div class="redirect-icon">üì±‚û°Ô∏èüîç</div>
    <h1>Opening in Chrome...</h1>
    <div class="countdown">
      <span id="countdownTimer">3</span> seconds remaining
    </div>
    <p>We're redirecting you to the Chrome browser for a better experience. If the automatic redirect doesn't work, click the button below.</p>
    <a id="manualRedirect" href="#" class="manual-link">Open in Chrome</a>
  </div>

  <script>
    // Countdown timer
    let seconds = 3;
    const countdownElement = document.getElementById('countdownTimer');
    const countdownInterval = setInterval(() => {
      seconds--;
      if (countdownElement) {
        countdownElement.textContent = seconds;
      }
      
      if (seconds <= 0) {
        clearInterval(countdownInterval);
      }
    }, 1000);
    
    // Function to detect platform and redirect
    function redirectToChrome() {
      const userAgent = navigator.userAgent || '';
      
      // Extract URL from query parameter
      const params = new URLSearchParams(window.location.search);
      const url = params.get('url');
      
      // If URL parameter exists, try to redirect to Chrome
      if (url) {
        // For Android devices
        if (/Android/i.test(userAgent)) {
          // Android Chrome URL scheme
          window.location.href = 'googlechrome://navigate?url=' + encodeURIComponent(url);
        } 
        // For iOS devices
        else if (/iPhone|iPad|iPod/i.test(userAgent)) {
          // iOS Chrome URL scheme
          window.location.href = 'googlechrome://navigate?url=' + encodeURIComponent(url);
        } 
        // For Telegram Desktop (which might not support Chrome URL scheme)
        else if (/TelegramDesktop/i.test(userAgent)) {
          // Open Chrome website as fallback
          window.location.href = 'https://www.google.com/chrome/';
        }
        // Desktop or unknown
        else {
          // For desktop, redirect to Chrome website
          window.location.href = 'https://www.google.com/chrome/';
        }
      } else {
        // If no URL parameter, redirect to Chrome website
        window.location.href = 'https://www.google.com/chrome/';
      }
    }
    
    // Set the manual link URL to Chrome website
    document.getElementById('manualRedirect').href = 'https://www.google.com/chrome/';
    
    // Try to redirect after a short delay (matching the meta refresh)
    setTimeout(redirectToChrome, 3000);
  </script>
</body>
</html>

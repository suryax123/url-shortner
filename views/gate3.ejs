<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Final Step — FlashURL</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    /* New gate-specific styles */
    .gate-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .gate-card {
      background: #ffffff;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      padding: 30px;
      margin-bottom: 20px;
      border-top: 4px solid #00b894;
    }
    
    .step-indicator {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 30px;
      gap: 15px;
    }
    
    .step-dot {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 18px;
      color: white;
    }
    
    .step-dot.active {
      background: linear-gradient(135deg, #55efc4, #00b894);
      box-shadow: 0 5px 15px rgba(85, 239, 196, 0.4);
    }
    
    .step-dot.completed {
      background: #00b894;
    }
    
    .step-dot.inactive {
      background: #e0e0e0;
      color: #636e72;
    }
    
    .step-line {
      height: 4px;
      width: 60px;
      background: #e0e0e0;
      border-radius: 2px;
    }
    
    .step-line.active {
      background: linear-gradient(90deg, #55efc4, #00b894);
    }
    
    .gate-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .gate-title {
      font-size: 28px;
      color: #2d3436;
      margin-bottom: 10px;
      font-weight: 700;
    }
    
    .gate-subtitle {
      color: #636e72;
      font-size: 16px;
    }
    
    .timer-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: 40px 0;
    }
    
    .timer-circle {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      position: relative;
    }
    
    .timer-circle::before {
      content: '';
      position: absolute;
      top: -5px;
      left: -5px;
      right: -5px;
      bottom: -5px;
      border-radius: 50%;
      background: linear-gradient(135deg, #55efc4, #00b894);
      z-index: -1;
      opacity: 0.1;
    }
    
    .timer-number {
      font-size: 48px;
      font-weight: bold;
      color: #00b894;
      line-height: 1;
    }
    
    .timer-label {
      font-size: 14px;
      color: #636e72;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-top: 5px;
    }
    
    .progress-container {
      width: 100%;
      max-width: 400px;
      height: 8px;
      background: #e0e0e0;
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: 30px;
    }
    
    .progress-bar {
      height: 100%;
      background: linear-gradient(90deg, #55efc4, #00b894);
      width: 0%;
      transition: width 1s linear;
    }
    
    .ad-container {
      margin: 25px 0;
      text-align: center;
    }
    
    .ad-label {
      font-size: 12px;
      color: #636e72;
      margin-bottom: 5px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .ad-slot {
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f5f6fa;
      border-radius: 10px;
      overflow: hidden;
      min-height: 70px;
      padding: 10px;
    }
    
    .continue-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 15px 30px;
      background: linear-gradient(135deg, #55efc4, #00b894);
      color: white;
      border: none;
      border-radius: 50px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 5px 15px rgba(85, 239, 196, 0.3);
      margin-top: 20px;
    }
    
    .continue-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(85, 239, 196, 0.4);
    }
    
    .continue-btn.hidden {
      display: none;
    }
    
    .social-bar {
      background: #f5f6fa;
      border-radius: 10px;
      padding: 15px;
      margin-top: 20px;
      text-align: center;
      border-left: 4px solid #00b894;
    }
    
    .verification-message {
      background: #e6fff0;
      border-left: 4px solid #00b894;
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 20px;
      text-align: center;
    }
    
    .verification-message p {
      color: #00b894;
      margin: 0;
      font-weight: 500;
    }
    
    .captcha-section {
      text-align: center;
      margin: 30px 0;
      padding: 20px;
      background: #f5f6fa;
      border-radius: 10px;
    }
    
    .captcha-section p {
      margin-bottom: 15px;
      color: #636e72;
      font-size: 1.1rem;
    }
    
    .recaptcha-container {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }
    
    .get-link-section {
      text-align: center;
      margin: 30px 0;
    }
    
    .success-text {
      color: #00b894;
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 20px;
    }
    
    .destination {
      margin: 30px 0;
      padding: 20px;
      background: #f5f6fa;
      border-radius: 10px;
      text-align: center;
    }
    
    .destination p {
      color: #636e72;
      margin-bottom: 10px;
      font-size: 0.9rem;
    }
    
    .destination code {
      display: block;
      padding: 10px;
      background: white;
      border-radius: 5px;
      word-break: break-all;
      color: #6c5ce7;
      font-size: 0.9rem;
    }
    
    .error-text {
      color: #d63031;
      font-size: 0.9rem;
      margin-top: 10px;
    }
    
    @media (max-width: 768px) {
      .gate-container {
        padding: 15px;
      }
      
      .gate-card {
        padding: 20px;
      }
      
      .gate-title {
        font-size: 24px;
      }
      
      .timer-circle {
        width: 100px;
        height: 100px;
      }
      
      .timer-number {
        font-size: 36px;
      }
    }
  </style>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body class="gate-page gate-step-3">
  <div class="gate-container">
    <!-- Top banner ad -->
    <div class="ad-container">
      <div class="ad-label">Advertisement</div>
      <div id="bannerTop-<%= shortId %>" class="ad-slot">
        <!-- Adsterra banner ad -->
        <script>
          atOptions = {
            'key': '3eff8504b33c6f3f2949267088e6b4c3',
            'format': 'iframe',
            'height': 60,
            'width': 468,
            'params': {}
          };
        </script>
        <script src="https://www.highperformanceformat.com/3eff8504b33c6f3f2949267088e6b4c3/invoke.js" async></script>
      </div>
    </div>

    <div class="gate-card">
      <!-- Step indicator -->
      <div class="step-indicator">
        <div class="step-dot completed">1</div>
        <div class="step-line active"></div>
        <div class="step-dot completed">2</div>
        <div class="step-line active"></div>
        <div class="step-dot active">3</div>
      </div>

      <!-- Verification message -->
      <div class="verification-message">
        <p>✓ Steps 1 & 2 completed successfully</p>
      </div>

      <!-- Gate header -->
      <div class="gate-header">
        <h1 class="gate-title">Your link is ready!</h1>
        <p class="gate-subtitle">Complete the verification to get your destination link.</p>
      </div>

      <!-- Timer and progress -->
      <div class="timer-container" id="countdownSection" aria-live="polite">
        <div class="timer-circle">
          <div class="timer-number" id="timer3">5</div>
          <div class="timer-label">seconds</div>
        </div>
        <div class="progress-container">
          <div class="progress-bar" id="progress3"></div>
        </div>
      </div>

      <!-- CAPTCHA section -->
      <div id="captchaSection" class="captcha-section hidden" aria-hidden="true">
        <p>Verify you're human:</p>
        <div class="recaptcha-container">
          <div class="g-recaptcha" data-sitekey="<%= siteKey %>" data-callback="onCaptchaSuccess"></div>
        </div>
        <p id="captchaError" class="error-text hidden"></p>
      </div>

      <!-- Get Link section -->
      <div id="getLinkSection" class="get-link-section hidden" aria-hidden="true">
        <p class="success-text">Verified — click to continue</p>
        <a id="getLinkBtn" class="continue-btn" href="#">Get Link</a>
      </div>

      <!-- Destination -->
      <div class="destination final-destination">
        <p>Destination</p>
        <code><%= originalUrl %></code>
      </div>

      <!-- Social bar ad -->
      <div class="social-bar">
        <div id="socialBarContainer-<%= shortId %>">
          <!-- Adsterra social bar ad -->
          <script src="https://pl28355881.effectivegatecpm.com/41/b9/68/41b9683409b2e1df660f482f0a40d231.js"></script>
        </div>
      </div>
    </div>

    <!-- Bottom banner ad -->
    <div class="ad-container">
      <div class="ad-label">Advertisement</div>
      <div id="bannerBottom-<%= shortId %>" class="ad-slot">
        <!-- Adsterra banner ad -->
        <script>
          atOptions = {
            'key': '3eff8504b33c6f3f2949267088e6b4c3',
            'format': 'iframe',
            'height': 60,
            'width': 468,
            'params': {}
          };
        </script>
        <script src="https://www.highperformanceformat.com/3eff8504b33c6f3f2949267088e6b4c3/invoke.js" async></script>
      </div>
    </div>

    <footer style="text-align: center; padding: 20px 0; color: #636e72; font-size: 14px;">
      <p>© 2025 FlashURL</p>
    </footer>
  </div>

  <script>
    (function(){
      var DURATION = 5;
      var timeLeft = DURATION;
      var timer = document.getElementById('timer3');
      var progress = document.getElementById('progress3');
      var countdown = document.getElementById('countdownSection');
      var captchaSection = document.getElementById('captchaSection');
      var getLinkSection = document.getElementById('getLinkSection');
      var captchaError = document.getElementById('captchaError');
      var getLinkBtn = document.getElementById('getLinkBtn');
      var shortId = '<%= shortId %>';
      var verifiedUrl = null;

      function updateUI() {
        if (timer) timer.textContent = timeLeft;
        var elapsed = DURATION - timeLeft;
        if (progress) progress.style.width = ((elapsed)/DURATION*100) + '%';
      }

      updateUI();
      var interval = setInterval(function(){
        timeLeft--;
        updateUI();
        if (timeLeft <= 0) {
          clearInterval(interval);
          if (countdown) countdown.style.display = 'none';
          if (captchaSection) {
            captchaSection.classList.remove('hidden');
            captchaSection.setAttribute('aria-hidden','false');
            captchaSection.style.display = 'block';
          }
        }
      }, 1000);

      window.onCaptchaSuccess = function(token) {
        fetch('/verify/' + shortId, {
          method: 'POST',
          headers: {'Content-Type':'application/json'},
          body: JSON.stringify({ captchaToken: token })
        }).then(r => r.json()).then(function(data){
          if (data.success) {
            verifiedUrl = data.redirectUrl;
            if (captchaSection) { captchaSection.style.display = 'none'; }
            if (getLinkSection) {
              getLinkSection.classList.remove('hidden');
              getLinkSection.setAttribute('aria-hidden','false');
              getLinkSection.style.display = 'block';
            }
          } else {
            if (captchaError) {
              captchaError.textContent = data.error || 'Verification failed';
              captchaError.classList.remove('hidden');
            }
            if (typeof grecaptcha !== 'undefined') grecaptcha.reset();
          }
        }).catch(function(){
          if (captchaError) {
            captchaError.textContent = 'Network error';
            captchaError.classList.remove('hidden');
          }
          if (typeof grecaptcha !== 'undefined') grecaptcha.reset();
        });
      };

      if (getLinkBtn) {
        getLinkBtn.addEventListener('click', function(e){
          e.preventDefault();
          if (verifiedUrl) window.location.href = verifiedUrl;
        });
      }
    })();
  </script>

  <script src="/js/adblock-detect.js"></script>
  <script src="/js/ads-loader.js"></script>
</body>
</html>
